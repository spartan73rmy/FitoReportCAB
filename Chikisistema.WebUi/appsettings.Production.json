  "Logging": {
    "LogLevel": {
      "Default": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "ChikisistemaDatabase": "Server=localhost;Database=Chikisistema;Trusted_Connection=True;",
    "ChikisistemaDatabaseLinux": "Host=localhost;Database=Chikisistema;Username=test;Password=123"
  },
  "Serilog": {
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "/home/chikisistema/logs/Log-.txt",
          "flushToDiskInterval": "00:00:30",
          "rollOnFileSizeLimit": true,
          "fileSizeLimitBytes": 10000000,
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] [{RequestId}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "/home/chikisistema/json-logs/Log-.json",
          "flushToDiskInterval": "00:00:30",
          "rollOnFileSizeLimit": true,
          "fileSizeLimitBytes": 10000000,
          "formatter": "Serilog.Formatting.Json.JsonFormatter",
          "rollingInterval": "Day"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Destructure": [
      {
        "Name": "ToMaximumDepth",
        "Args": { "maximumDestructuringDepth": 4 }
      },
      {
        "Name": "ToMaximumStringLength",
        "Args": { "maximumStringLength": 100 }
      },
      {
        "Name": "ToMaximumCollectionCount",
        "Args": { "maximumCollectionCount": 10 }
      }
    ],
    "Properties": {
      "Application": "AppIas"
    }
  }
}